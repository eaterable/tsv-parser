# EditorConfig helps maintain consistent coding styles across various editors and IDEs.
# https://editorconfig.org

# Root configuration
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# For JavaScript files (js and mjs)
[*.{js,mjs}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.yml]
indent_style = space
indent_size = 2


